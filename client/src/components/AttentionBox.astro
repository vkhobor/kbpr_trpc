---
export interface Props {
  content: string;
}

const { content } = Astro.props;
---

<div class="attentionbox">
  {content}
</div>

<style>
  .attentionbox {
    font-size: 2.5vh;
    background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVQYV2P4//9/AwAJfAN+YX69HQAAAABJRU5ErkJggg==),
      linear-gradient(to right, #ff5656 0%, #ffbf00 100%);
    background-repeat: repeat, no-repeat;
    padding: 2vh 3vh 2vh 3vh;
    border-radius: 1vh;
    margin-bottom: 2vh;
    border-left: 0.5vh solid red;
  }
</style>
