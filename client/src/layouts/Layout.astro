---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Layout/Header.astro";
import Nav from "../components/Layout/Nav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <Header />
  <Nav />
  <div class="container">
    <slot />
  </div>
</BaseLayout>

<style>
  .container {
    width: 70%;
    margin: auto;
    margin-top: 3vh;
    margin-bottom: 3vh;
  }
</style>
